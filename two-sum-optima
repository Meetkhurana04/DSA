#include<stdio.h>
#include<bits/stdc++.h>
using namespace std;

class Solution {
public:
    vector<int> twoSum(vector<int>& nums, int target) {
        int left = 0 ;
        int right = nums.size() - 1 ;
        int summ = 0 ; 
        sort(nums.begin(), nums.end());

        while(left<right){
            summ = nums[left]+nums[right];
            if(summ == target ){
               return {left, right};
            }
            if(target>summ){
                // bda kro 
                left++;
            }
            if(target<summ){
                // chota kro 
                right--;
            }

        }

        return {};
    }
};